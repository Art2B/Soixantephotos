extends ../partials/layout

block content
  h1 Verify photos
  if photos.length > 0
    each photo in photos
      div(class="photo" data-id="#{photo._id}")
        img(src="/photos/"+photo._id, alt="")
        p= photo.name
        p= photo.category.name
        button#validate Validate
        button(id="validate-nsfw" data-nsfw="true") NSFW

block append scripts
  script(src="/js/partials/verify.js")
  script.
      Verify.init();